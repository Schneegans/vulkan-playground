#version 450

vec2 positions[4] = vec2[](
    vec2(-0.5, -0.5),
    vec2(0.5, -0.5),
    vec2(-0.5, 0.5),
    vec2(0.5, 0.5)
);

layout(binding = 0) uniform Uniforms {
    vec3 color;
    float time;
} uniforms;

layout(push_constant, std140) uniform PushConstants {
    vec2 pos;
} pushConstants;

void main() {
    gl_Position = vec4(positions[gl_VertexIndex] + pushConstants.pos, 0.0, 1.0);
}
